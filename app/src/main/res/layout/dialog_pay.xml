<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_pay_ok"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/image_pay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_pay_title" />

            <TextView
                android:id="@+id/tx_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="支付:80.00"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_pay_title">

            <ImageView
                android:id="@+id/image_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_pay_content1" />

            <RelativeLayout
                android:id="@+id/rl_pay_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/icon_pay_content2"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/image_pay_code"
                    android:layout_width="250dp"
                    android:layout_height="240dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_launcher" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tx_pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_pay_code"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="支付宝"
                android:textColor="@color/house_list_text_black"
                android:textSize="16sp" />


        </RelativeLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/btn_pay_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@mipmap/icon_pay_ok"
        android:text="如已支付,请点击这里"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/ip_text_primary_inverted" />
</RelativeLayout>